{
  "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": [
          "es6", "dom"
      ],
      "jsx": "react",
      "declaration": true,
      "removeComments": false,
      "stripInternal": true,
      "esModuleInterop": true, // fixes some issues TS originally had with the ES6 spec where TypeScript treats CommonJS/AMD/UMD modules similar to ES6 module
      // since 2.3
      // "strict": true,
      "alwaysStrict": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true
  },

}